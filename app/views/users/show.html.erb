
<div class="w3-container">
<h1><%= @user.full_name %><h1>
<ul>
  <h2About Me  <%= @user.bio %>
  <br>
  <p>My Preferenced Categories</p>
  <p></p>
    <% @user.categories.each do |cat| %>
       <li><%=  link_to cat.name, category_path(cat)%></li>
       <% end %>
  </ul>
</div>

<div class="w3-container">
<% for @user  %>
  <div class="user">
    <p>
      <strong><%= @user.full_name %></strong>
      <%= link_to "Add Me to Your Friends", friendships_path(:friend_id => @user), :method => :post %>
      <div class="clear"></div>
    </p>
  </div>
</div>

<div class="w3-container">
<h3>My Friends</h3>
</div>


<div class="w3-container">
<h2>Favorite Products</h2>
<% @user.products.each do |favorite| %>
		<%= link_to image_tag(favorite.image_url), favorite.listing_url %>
<% end %>
</div>
