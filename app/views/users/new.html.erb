<h2>Create a New User</h2>

<%= form_for @user do |f| %>
  <%= f.label :first_name, 'First Name' %>
  <%= f.text_field :first_name %>
  <br>
  <br>
  <%= f.label :last_name, 'Last Name' %>
  <%= f.text_field :last_name %>
  <br>
  <br>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %>
  <br>
  <br>
  <%= f.label :password, 'Password' %>
  <%= f.text_field :password %>
  <br>
  <br>
  <%= f.label :bio, 'Tell us about yourself:' %>
  <%= f.text_area :bio %>
  <br>
  <br>
  <%= f.fields_for :user_categories do |usercat|%>
  Please select three category preferences:
  <col><%= f.collection_check_boxes :category_ids, Category.all, :id, :name  %></col>
  <% end %>
  <br>
  <%= f.submit "Create User" %>
<% end %>
