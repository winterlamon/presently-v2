<div class="w3-container w3-display-center w3-margin">

    <div class="w3-container w3-padding-48">
      <h1><strong><%= @product.name %></strong><h1>
    </div>

    <div class="w3-container w3-padding-48">
    <%= link_to image_tag(@product.image_url), @product.listing_url %>
    </div>

    <div class="w3-container w3-padding-24">
      <h4><%= number_to_currency(@product.price) %><h4>
    </div>

    <div class="w3-container w3-padding-24">
        <%= form_for :user_product, url: user_products_path do |f| %>
        <%= f.hidden_field :user_id, value: session[:user_id] %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.submit "Add to Favorite Products" %>
        <% end %>
    </div>

    <div class="w3-container w3-padding-24">
        <p><%= @product.description %></p>
    </div>


</div>
